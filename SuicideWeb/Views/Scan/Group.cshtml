@model IEnumerable<SuicideWeb.Models.ResultScan>

@{
    ViewBag.Title = "Результаты сканирования";
}

<h2>Результаты сканирования</h2>

<table class="table">
    <tr>
        <th>
            Пользователь
        </th>
        <th>
            Результат
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if ((item.MatchesDic + item.MatchesGroups > 0) && (item.MatchesDic + item.MatchesGroups <= 5))
        {
            <tr class="warning">
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    Совпадений с тезаурусом : <span>@item.MatchesDic</span> | Совпадений по группам : <span>@item.MatchesGroups</span>
                </td>
                <td>
                    @Html.ActionLink("Подробнее", "Person", "Scan", new { id = item.UserId }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
        else if((item.MatchesDic + item.MatchesGroups > 5) && (item.MatchesDic + item.MatchesGroups < 15))
        {
            <tr class="danger">
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    Совпадений с тезаурусом : <span>@item.MatchesDic</span> | Совпадений по группам : <span>@item.MatchesGroups</span>
                </td>
                <td>
                    @Html.ActionLink("Подробнее", "Person", "Scan", new { id = item.UserId }, new { @class="btn btn-default" })
                </td>
            </tr>
        }
        else
        {
            <tr class="success">
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    Совпадений с тезаурусом : <span>@item.MatchesDic</span> | Совпадений по группам : <span>@item.MatchesGroups</span>
                </td>
                <td>
                    @Html.ActionLink("Подробнее", "Person", "Scan", new { id = item.UserId }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    }

</table>