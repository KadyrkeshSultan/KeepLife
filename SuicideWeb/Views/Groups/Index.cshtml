@model IEnumerable<SuicideWeb.Models.Group>

@{
    ViewBag.Title = "Список групп";
}

<h2>Список групп</h2>

<p>
    @Html.ActionLink("Добавить группу", "Create", null, new { @class = "btn btn-default" })
</p>

<table class="table">
         <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Список персон", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("Анализ", "Group", "Scan", new { id = item.Id }, null)

                </td>
            </tr>
        }

</table>
